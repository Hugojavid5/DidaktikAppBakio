<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_verde">

    <!-- Imagen de la vid -->
    <ImageView
        android:id="@+id/iv_vid"
        android:layout_width="306dp"
        android:layout_height="387dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/vid" />

    <!-- Imagen de la uva encima de la vid -->
    <ImageView
        android:id="@+id/iv_uva"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/uva" />

    <!-- Imagen de los pies donde se puede arrastrar la uva -->
    <ImageView
        android:id="@+id/iv_pies"
        android:layout_width="321dp"
        android:layout_height="407dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/prensa_pies" />

    <!-- Caja donde se guarda la uva despuÃ©s de arrastrarla -->
    <ImageView
        android:id="@+id/iv_caja"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/caja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:visibility="gone" />

    <!-- Barril con el reloj encima -->
    <ImageView
        android:id="@+id/iv_barril"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/barril"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

    <!-- Imagen del reloj -->
    <ImageView
        android:id="@+id/iv_reloj"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/reloj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone" />

    <!-- Botella de vino -->
    <ImageView
        android:id="@+id/iv_botella"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/botella"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:visibility="gone" />

    <!-- ImageButton para ir a la siguiente actividad -->
    <ImageButton
        android:id="@+id/imageButtonNextActivity"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:contentDescription="Siguiente Actividad"
        android:scaleType="centerInside"
        android:src="@drawable/siguiente"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/iv_botella" />


</RelativeLayout>
