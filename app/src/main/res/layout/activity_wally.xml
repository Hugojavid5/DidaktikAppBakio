<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vista superpuesta -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Contenedor para superposición -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen principal -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENCUENTRA LAS TRES TORRES"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="85dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/foto_wally_sintorre"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botones con padding para aumentar área de toque -->
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="255dp"
            android:background="@null"
            android:contentDescription="@string/image_button_description"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/torre1"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:contentDescription="@string/image_button_description"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="367dp"
            android:layout_marginTop="262dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:padding="10dp"
            app:srcCompat="@drawable/torre2"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:contentDescription="@string/image_button_description"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="237dp"
            android:layout_marginTop="411dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:padding="10dp"
            app:srcCompat="@drawable/torre3"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_marginTop="500dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="28dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/torre1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="28dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/torre1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="28dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/torre1"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:onClick="siguiente"
            android:text="Segi"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginStart="30dp"
            android:layout_marginTop="630dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
