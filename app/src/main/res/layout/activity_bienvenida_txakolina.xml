<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/fondo">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TXAKOLINA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Descripción de la actividad -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El txakolín es un vino típico del País Vasco, elaborado con uvas de viñedos montañosos y almacenado en barricas de madera llamadas &quot;kupelas&quot;. En Bakio, destacan varias bodegas y el Museo del Txakolí, que narra su historia y curiosidades. Solo puede disfrutarse a partir de los 18 años."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Imagen de bienvenida -->
    <ImageView
        android:id="@+id/activityImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/uva"
        android:contentDescription="Imagen de bienvenida"
        android:layout_marginBottom="16dp"/>

    <!-- Barra de progreso de audio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- SeekBar de audio -->
        <SeekBar
            android:id="@+id/audioSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginTop="8dp"/>

        <!-- Contenedor para los tiempos (inicio y final) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <!-- Tiempo actual -->
            <TextView
                android:id="@+id/currentTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingStart="16dp" />

            <!-- Tiempo total -->
            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_gravity="end"
                android:paddingEnd="16dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de control de audio -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Play"
            android:src="@drawable/play"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pause"
            android:contentDescription="Pause"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_reiniciar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/reiniciar"
            android:contentDescription="Reiniciar"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Botón Jugar (Button normal) -->
    <ImageButton
        android:id="@+id/btnJugar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/jugar"
        android:background="@android:color/transparent"
        android:contentDescription="Jugar"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

</LinearLayout>