<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/fondo">

    <!-- Título con los resultados -->
    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:paddingBottom="16dp"
        android:text="@string/titu_final_resultados"
        android:textAlignment="center"
        android:textSize="20sp" />

    <!-- Animación de sonrisa o tristeza -->
    <ImageView
        android:id="@+id/imageViewAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/sonrisa" />

    <!-- Botón 'Fin del juego' -->
    <Button
        android:id="@+id/buttonEndGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fin_del_juego_boton"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
