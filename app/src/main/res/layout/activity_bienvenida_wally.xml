<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/title_matxitxako"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Explicación -->
    <TextView
        android:id="@+id/explicacion"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginBottom="20dp"
        android:text="@string/explicacion_matxitxako"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Imagen -->
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/wally" />

    <!-- Controles de audio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp" />

        <!-- Tiempos (Inicial y Final) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCurrentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_weight="1"
                android:gravity="start" />

            <TextView
                android:id="@+id/txtTotalTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de control de audio -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/play"
            android:src="@drawable/play"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pause"
            android:contentDescription="@string/pause"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_reiniciar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/reiniciar"
            android:contentDescription="@string/reiniciar"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnJugar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/jugar"
            android:background="@android:color/transparent"
            android:contentDescription="@string/jugar"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>
</LinearLayout>
