<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de la vela oscura -->
    <ImageView
        android:id="@+id/velaOscura"
        android:layout_width="306dp"
        android:layout_height="354dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/vela_oscura" />

    <!-- Cuadrícula para las piezas 3x2 -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/velaOscura"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal"
        android:alignmentMode="alignBounds"
        android:layout_centerInParent="true">

        <!-- Piezas en la cuadrícula -->

        <ImageView
            android:id="@+id/pieza1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="pieza1"
            android:src="@drawable/pieza1" />

        <ImageView
            android:id="@+id/pieza2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="pieza2"
            android:src="@drawable/pieza2" />

        <ImageView
            android:id="@+id/triangulo"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="triangulo"
            android:src="@drawable/triangulo" />

        <ImageView
            android:id="@+id/pieza4"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="pieza4"
            android:src="@drawable/pieza4" />

        <ImageView
            android:id="@+id/pieza5"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:contentDescription="pieza5"
            android:src="@drawable/pieza5" />

        <ImageView
            android:id="@+id/pegote"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="pegote"
            android:src="@drawable/pegote" />

    </GridLayout>

    <!-- Botón para salir -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:onClick="salirActividad" />

</RelativeLayout>
